---
import Layout from '../layouts/Layout.astro';
import { LanguageChart, CommitActivityChart, StatsSkeleton } from '../components/Charts';

const baseUrl = import.meta.env.BASE_URL;
---

<Layout 
  title="Statistics"
  description="Repository statistics and activity metrics"
  showBreadcrumbs={true}
  breadcrumbs={[{ label: 'Statistics', href: `${baseUrl}/statistics` }]}
>
  <div class="container mx-auto px-4 py-12 max-w-7xl">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Repository Statistics</h1>
      <p class="text-xl opacity-80">
        Real-time metrics and insights about The Terraformer project
      </p>
    </div>

    <!-- Stats Container -->
    <div id="stats-container">
      <StatsSkeleton client:load />
    </div>
  </div>

  <script>
    import { LanguageChart, CommitActivityChart } from '../components/Charts';
    import { createRoot } from 'react-dom/client';
    import { createElement } from 'react';

    async function loadStats() {
      const container = document.getElementById('stats-container');
      if (!container) return;

      try {
        const response = await fetch(`${import.meta.env.BASE_URL}/data/stats.json`);
        const stats = await response.json();

        // Create the stats UI
        container.innerHTML = `
          <div class="space-y-8">
            <!-- Overview Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="stat bg-base-200 rounded-lg shadow-xl">
                <div class="stat-figure text-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                </div>
                <div class="stat-title">Stars</div>
                <div class="stat-value text-primary">${stats.stars || 0}</div>
                <div class="stat-desc">GitHub stargazers</div>
              </div>

              <div class="stat bg-base-200 rounded-lg shadow-xl">
                <div class="stat-figure text-secondary">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
                  </svg>
                </div>
                <div class="stat-title">Forks</div>
                <div class="stat-value text-secondary">${stats.forks || 0}</div>
                <div class="stat-desc">Repository forks</div>
              </div>

              <div class="stat bg-base-200 rounded-lg shadow-xl">
                <div class="stat-figure text-accent">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </div>
                <div class="stat-title">Watchers</div>
                <div class="stat-value text-accent">${stats.watchers || 0}</div>
                <div class="stat-desc">Repository watchers</div>
              </div>
            </div>

            <!-- Charts -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <div class="bg-base-200 p-6 rounded-lg shadow-xl">
                <div id="language-chart"></div>
              </div>
              <div class="bg-base-200 p-6 rounded-lg shadow-xl">
                <div id="commit-chart"></div>
              </div>
            </div>

            <!-- Additional Info -->
            <div class="alert alert-info shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Statistics are updated during each deployment via GitHub Actions.</span>
            </div>
          </div>
        `;

        // Render React charts
        const languageChartContainer = document.getElementById('language-chart');
        const commitChartContainer = document.getElementById('commit-chart');

        if (languageChartContainer && stats.languages) {
          const root = createRoot(languageChartContainer);
          root.render(createElement(LanguageChart, { languages: stats.languages }));
        }

        if (commitChartContainer && stats.commitActivity) {
          const root = createRoot(commitChartContainer);
          root.render(createElement(CommitActivityChart, { activity: stats.commitActivity }));
        }
      } catch (error) {
        console.error('Failed to load statistics:', error);
        container.innerHTML = `
          <div class="alert alert-error shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Failed to load statistics. Data may not be available yet.</span>
          </div>
        `;
      }
    }

    // Load stats when page is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadStats);
    } else {
      loadStats();
    }
  </script>
</Layout>
