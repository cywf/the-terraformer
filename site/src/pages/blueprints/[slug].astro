---
import Layout from '../../layouts/Layout.astro';
import { blueprintDetails } from '../../data/blueprints';

const baseUrl = import.meta.env.BASE_URL;

// Generate static paths for all blueprints
export function getStaticPaths() {
  const blueprintSlugs = Object.keys(blueprintDetails);
  return blueprintSlugs.map((slug) => ({
    params: { slug },
  }));
}

const blueprintSlug = Astro.params.slug || 'unknown';
const blueprint = blueprintDetails[blueprintSlug as keyof typeof blueprintDetails] || {
  title: 'Blueprint Details',
  description: 'Blueprint information',
  content: `
## Coming Soon

This blueprint is currently under development. Check back soon for the full implementation!

In the meantime, you can:
- Browse other [blueprints](${baseUrl}/blueprints)
- Read our [documentation](${baseUrl}/docs)
- [Contribute](https://github.com/cywf/the-terraformer) your own blueprints
  `,
};
---

<Layout 
  title={blueprint.title}
  description={blueprint.description}
  showBreadcrumbs={true}
  breadcrumbs={[
    { label: 'Blueprints', href: `${baseUrl}/blueprints` },
    { label: blueprint.title, href: `${baseUrl}/blueprints/${blueprintSlug}` }
  ]}
>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <article class="prose prose-lg max-w-none">
      <h1>{blueprint.title}</h1>
      <p class="lead">{blueprint.description}</p>
      
      <div set:html={blueprint.content} class="markdown-content"></div>
      
      <div class="not-prose mt-12 flex gap-4">
        <a href={`${baseUrl}/blueprints`} class="btn btn-outline">
          ‚Üê Back to Blueprints
        </a>
        <a 
          href="https://github.com/cywf/the-terraformer" 
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary"
        >
          View on GitHub
        </a>
      </div>
    </article>
  </div>
</Layout>

<style>
  .markdown-content {
    @apply text-base-content;
  }
  
  .markdown-content h2 {
    @apply text-2xl font-bold mt-8 mb-4;
  }
  
  .markdown-content h3 {
    @apply text-xl font-bold mt-6 mb-3;
  }
  
  .markdown-content ul, .markdown-content ol {
    @apply ml-6 my-4;
  }
  
  .markdown-content li {
    @apply mb-2;
  }
  
  .markdown-content code {
    @apply bg-base-300 px-1 py-0.5 rounded text-accent;
  }
  
  .markdown-content pre {
    @apply bg-base-300 p-4 rounded-lg overflow-x-auto my-4;
  }
  
  .markdown-content pre code {
    @apply bg-transparent p-0;
  }
</style>
